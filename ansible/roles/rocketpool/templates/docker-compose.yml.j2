version: "3.4"
services:
  eth1:
    image: {{ eth.eth1.image | default('${ETH1_IMAGE}') }}
    container_name: ${COMPOSE_PROJECT_NAME}_eth1
    restart: unless-stopped
    stop_grace_period: 3m
    ports:
      - "${ETH1_P2P_PORT:-{{ eth.eth1.port }}}:${ETH1_P2P_PORT:-{{ eth.eth1.port }}}/udp"
      - "${ETH1_P2P_PORT:-{{ eth.eth1.port }}}:${ETH1_P2P_PORT:-{{ eth.eth1.port }}}/tcp"
    volumes:
      - {{ eth.eth1.client_data_path }}:/ethclient
      - {{ rocketpool_user_home }}/.rocketpool/chains/eth1:/setup:ro
    networks:
      - net
    environment:
      - CLIENT=${ETH1_CLIENT}
      - ETHSTATS_LABEL=${ETHSTATS_LABEL}
      - ETHSTATS_LOGIN=${ETHSTATS_LOGIN}
      - INFURA_PROJECT_ID=${INFURA_PROJECT_ID}
      - POCKET_PROJECT_ID=${POCKET_PROJECT_ID}
      - HTTP_PROVIDER_URL=${HTTP_PROVIDER_URL}
      - WS_PROVIDER_URL=${WS_PROVIDER_URL}
      - GETH_CACHE_SIZE=${GETH_CACHE_SIZE}
      - GETH_MAX_PEERS=${GETH_MAX_PEERS}
      - ETH1_P2P_PORT=${ETH1_P2P_PORT}
    entrypoint: sh
    command: "/setup/start-node.sh"
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
  eth2:
    image: {{ eth.eth2.image | default('${ETH2_IMAGE}') }}
    user: root
    container_name: ${COMPOSE_PROJECT_NAME}_eth2
    restart: unless-stopped
    stop_grace_period: 3m
    ports:
      - "${ETH2_P2P_PORT:-{{ eth.eth2.port }}}:${ETH2_P2P_PORT:-{{ eth.eth2.port }}}/tcp"
      - "${ETH2_P2P_PORT:-{{ eth.eth2.port }}}:${ETH2_P2P_PORT:-{{ eth.eth2.port }}}/udp"
    volumes:
      - {{ rocketpool_user_home }}/.rocketpool/data/validators:/validators
      - {{ eth.eth2.client_data_path }}:/ethclient
      - {{ rocketpool_user_home }}/.rocketpool/chains/eth2:/setup:ro
    networks:
      - net
    environment:
      - CLIENT=${ETH2_CLIENT}
      - ETH1_PROVIDER=${ETH1_PROVIDER}
      - ETH1_WS_PROVIDER=${ETH1_WS_PROVIDER}
      - CUSTOM_GRAFFITI=${CUSTOM_GRAFFITI}
      - ROCKET_POOL_VERSION=${ROCKET_POOL_VERSION}
      - ETH2_P2P_PORT=${ETH2_P2P_PORT}
      - ETH2_MAX_PEERS=${ETH2_MAX_PEERS}
      - ENABLE_METRICS=${ENABLE_METRICS}
      - ETH2_METRICS_PORT=${ETH2_METRICS_PORT}
      - EXTERNAL_IP=${EXTERNAL_IP}
{% if eth.eth2.checkpoint_sync_url | default(False) %}
      - ETH2_CHECKPOINT_SYNC_URL={{ eth.eth2.checkpoint_sync_url }}
{% endif %}
    entrypoint: sh
    command: "/setup/start-beacon.sh"
    depends_on:
      - eth1
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
  validator:
    image: {{ eth.validator.image | default('${VALIDATOR_IMAGE}') }}
    user: root
    container_name: ${COMPOSE_PROJECT_NAME}_validator
    restart: unless-stopped
    stop_grace_period: 3m
    volumes:
      - {{ rocketpool_user_home }}/.rocketpool/data/validators:/validators
      - {{ rocketpool_user_home }}/.rocketpool/chains/eth2:/setup:ro
    networks:
      - net
    environment:
      - CLIENT=${VALIDATOR_CLIENT}
      - ETH2_PROVIDER=${ETH2_PROVIDER}
      - CUSTOM_GRAFFITI=${CUSTOM_GRAFFITI}
      - ROCKET_POOL_VERSION=${ROCKET_POOL_VERSION}
      - ENABLE_METRICS=${ENABLE_METRICS}
      - VALIDATOR_METRICS_PORT=${VALIDATOR_METRICS_PORT}
    entrypoint: sh
    command: "/setup/start-validator.sh"
    depends_on:
      - eth2
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
  api:
    image: ${SMARTNODE_IMAGE}
    container_name: ${COMPOSE_PROJECT_NAME}_api
    restart: unless-stopped
    stop_signal: SIGKILL
    stop_grace_period: 1s
    volumes:
      - {{ rocketpool_user_home }}/.rocketpool:/.rocketpool
    networks:
      - net
    depends_on:
      - eth1
    entrypoint: /bin/sleep
    command: "infinity"
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
  node:
    image: ${SMARTNODE_IMAGE}
    container_name: ${COMPOSE_PROJECT_NAME}_node
    labels:
      - 'version={{ rocketpool.version }}'
    restart: unless-stopped
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ rocketpool_user_home }}/.rocketpool:/.rocketpool
    networks:
      - net
    command: "-m 0.0.0.0 -r ${NODE_METRICS_PORT:-9102} node"
    depends_on:
      - eth1
      - eth2
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
  watchtower:
    image: ${SMARTNODE_IMAGE}
    container_name: ${COMPOSE_PROJECT_NAME}_watchtower
    restart: unless-stopped
    volumes:
      - {{ rocketpool_user_home }}/.rocketpool:/.rocketpool
    networks:
      - net
    command: "-m 0.0.0.0 -r ${WATCHTOWER_METRICS_PORT:-9104} watchtower"
    depends_on:
      - eth1
      - eth2
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
networks:
  net:
volumes:
  eth1clientdata:
  eth2clientdata:
